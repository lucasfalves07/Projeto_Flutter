rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() { return request.auth != null; }

    // Materiais em: materiais/{professorUid}/...
    match /materiais/{profUid}/{allPaths=**} {
      allow read: if isSignedIn(); // refine: permitir apenas membros da turma
      allow write: if isSignedIn() && request.auth.uid == profUid;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

